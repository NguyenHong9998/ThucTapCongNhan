extends ../layout/layout

block content
    h1.text-center
        span CHECK USER SIGN UP
    table.table.table-striped.table-bordered.table-hover
        caption List of users
        tr.table-success
            th User
            th.text-center Check
            th.text-center Delete
        each us in list
            tr.list-user
                td
                    a.user-ho=us.name
                    div.hide
                        p.id=us._id
                        p.name=us.name
                        p.mail=us.mail
                        p.job=us.job
                        p.office=us.office
                        p.name_acc=us.name_acc
                td.text-center
                    a(href='./add-user/'+us._id).btn.btn-success
                        svg.bi.bi-check-circle-fill(width='2em', height='2em', viewbox='0 0 16 16', fill='currentColor', xmlns='http://www.w3.org/2000/svg')
                            path(fill-rule='evenodd', d='M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z')
                td.text-center
                    a(href='./del-user/'+us._id).btn.btn-danger
                        svg.bi.bi-x-circle-fill(width='2em', height='2em', viewbox='0 0 16 16', fill='currentColor', xmlns='http://www.w3.org/2000/svg')
                            path(fill-rule='evenodd', d='M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM5.354 4.646a.5.5 0 1 0-.708.708L7.293 8l-2.647 2.646a.5.5 0 0 0 .708.708L8 8.707l2.646 2.647a.5.5 0 0 0 .708-.708L8.707 8l2.647-2.646a.5.5 0 0 0-.708-.708L8 7.293 5.354 4.646z')
    div.lightbox.animate__animated
        .col-sm-12
            table.table.table-striped.table-bordered.mt-5
                tr
                    td ID :
                    td.id
                tr
                    td NAME :
                    td.name
                tr
                    td MAIL :
                    td.mail
                tr
                    td JOB :
                    td.job
                tr
                    td OFFICE :
                    td.office
                tr
                    td NAME_ACC :
                    td.name_acc

    
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js')
    script(src='/js/check.js')
    link(rel="stylesheet",href="../css/check.css",media="screen")

